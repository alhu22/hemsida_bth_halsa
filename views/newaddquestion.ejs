<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Question</title>
    <style>

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(to bottom right, #fef3d6, #b3d4fc);
            font-family: Arial, sans-serif;
            margin: 0;
        }
        .form-box {
            z-index: 2;
            width: 450px;
            background: #fff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        .form-box h2 {
            text-align: center;
        }
        .form-box form {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        .form-box input[type="text"] {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .form-box button {
            padding: 10px;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .form-box button:disabled {
            background-color: #ccc;
        }
        .message {
            margin-top: 10px;
        }
    </style>
</head>
<body>
        <div class="form-box">
            <h2>Add Question</h2>
            <form class="myform" action="/addQ" method="POST">
                <label>Question</label>
                <input type="text" id="questionInput" name="question" placeholder="Ex. Question %%var_1%%kg rest of question %%var_2%%?" required>

                <div style="display: flex; gap: 10px; align-items: center;">
                    <div style="flex: 2;">
                        <label>Answer</label>
                        <input type="text" name="answerFormula" placeholder="Ex. var_1 + var_2" required>
                    </div>
                    <div style="flex: 1;">
                        <label>Unit</label>
                        <select name="answerUnit" id="answerUnit" style="height: 40px; padding: 8px;">
                            <option value="" disabled selected>Select a unit</option>
                        
                            <% units.forEach(u => { %>
                                <option value="<%= u.unit %>"><%= u.unit %></option>
                            <% }); %>
                        
                            <option value="add-unit">Add unit</option>
                        </select>                        
                        <div id="add-unit" style="display: none;">
                            <input type="text" id="customUnit" name="answerUnit" placeholder="Ex. kg">
                        </div>
                    </div>
                </div>

                <label>Variating Values (JSON)</label>
                <input type="text" name="variating_values" placeholder='Ex. {"var_1": [50,70], "var_2": [10,20]}' required>

                <label>Course</label>
                <input type="text" name="course" placeholder="Ex. ab1234" required>

                <label>Question Type</label>
                <input type="text" name="question_type" placeholder="Ex. test type A" required>

                <button type="submit" <%= isUploading ? 'disabled' : '' %>>Add Question</button>

                <% if (responseMessage) { %>
                    <p class="message"><%= responseMessage %></p>
                <% } %>
            </form>
        </div>

        <script>
            const answerUnit = document.getElementById('answerUnit');
            const addUnit = document.getElementById('add-unit');
        
            answerUnit.addEventListener('change', () => {
                if (answerUnit.value === 'add-unit') {
                    addUnit.style.display = 'block';
                    answerUnit.style.display = 'none';
                } else {
                    addUnit.style.display = 'none';
                }
            });
        </script>
</body>
</html>